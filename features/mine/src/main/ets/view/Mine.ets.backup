          // åŠŸèƒ½æŒ‰é’®åŒºåŸŸ
          Column({ space: 16 }) {
            // ä¸ªäººä¿¡æ¯æŒ‰é’®
            Row() {
              Image($r('app.media.account'))
                .width('24vp')
                .height('24vp')
                .margin({ right: '12vp' })
              Text($r('app.string.user_info'))
                .fontSize('16fp')
                .fontColor('#182431')
              Blank()
              Image($r('app.media.right_grey'))
                .width('16vp')
